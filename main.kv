ScreenManagement:
    AccelerometerScreen:
    TimerScreen:

<AccelerometerScreen>:
    name: "Accelerometer"
    Label:
        text: 'accelerometer:'
        id: label
        y: root.height * 0.2
        x: root.width * 0.5
    Label:
        text: 'measure high value:'
        id: labelf
        y: root.height * 0.3
        x: root.width * 0.5
    Label:
        text: 'measure low value:'
        id: labely
        y: root.height * 0.4
        x: root.width * 0.5
    Label:
        text: 'Person has fallen: NO'
        id: labelt
        y: root.height * 0.5
        x: root.width * 0.5
    Label:
        text: 'Fase:'
        id: labelu
        y: root.height * 0.6
        x: root.width * 0.5

<TimerScreen>:
    name: "Timer"
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: '30'
            font_size: 120
            size_hint: (1, .75)
            id: countdown

        Button:
            text: 'I am okay'
            font_size: 72
            size_hint: (1, .25)
            id: ok_button
            on_press:
                self.cancel_timer